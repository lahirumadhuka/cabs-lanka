<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--fragment to display our maps-->
    <fragment xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60sp"
        android:layout_marginBottom="60sp"
        tools:context="com.MyTransportApp.cabslanka.UI.ConfirmationActivity" />

    <Button
        android:id="@+id/btnCancelRide"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:onClick="btnNextPage"
        android:text="Cancel the Ride"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="73sp"
        android:textColor="@color/white"
        android:background="#2196F3"
        android:text="Finding a Driver..." />

    <Button
        android:id="@+id/btnDriverDetails"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:onClick="btnNextPage"
        android:text="Driver Details"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />


</RelativeLayout>
